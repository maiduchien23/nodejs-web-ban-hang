<form action="/admin/roles/add" method="post" autocomplete="off">
  <div class="mb-3">
    <label for="">Tên</label>
    <input
      type="text"
      name="nameRole"
      placeholder="Tên Role..."
      class="form-control"
    />
    <span class="text-danger"
      ><%= validate.getError(errors, "nameRole") %></span
    >
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th width="29%">Module</th>
        <th>Quyền</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Quản lý người dùng</td>
        <td>
          <div class="row">
            <div class="col">
              <input
                type="checkbox"
                id="usersRead"
                name="permission"
                value="users.read"
              />
              <label for="usersRead">Xem</label>
            </div>
            <div class="col">
              <input
                type="checkbox"
                name="permission"
                id="usersAdd"
                value="users.add"
              />
              <label for="usersAdd">Thêm</label>
            </div>
            <div class="col">
              <input
                type="checkbox"
                name="permission"
                id="usersUpdate"
                value="users.update"
              />
              <label for="usersUpdate">Sửa</label>
            </div>
            <div class="col">
              <input
                type="checkbox"
                name="permission"
                id="usersDelete"
                value="users.delete"
              />
              <label for="usersDelete">Xóa</label>
            </div>
            <div class="col">
              <input
                type="checkbox"
                name="permission"
                id="usersPermission"
                value="users.permission"
              />
              <label for="usersPermission">Phân quyền</label>
            </div>
          </div>
        </td>
      </tr>
      <tr>
        <td>Quản lý role</td>
        <td>
          <div class="row">
            <div class="col">
              <input
                type="checkbox"
                name="permission"
                id="rolesRead"
                value="roles.read"
              />
              <label for="rolesRead">Xem</label>
            </div>
            <div class="col">
              <input
                type="checkbox"
                name="permission"
                id="rolesAdd"
                value="roles.add"
              />
              <label for="rolesAdd">Thêm</label>
            </div>
            <div class="col">
              <input
                type="checkbox"
                name="permission"
                id="rolesUpdate"
                value="roles.update"
              />
              <label for="rolesUpdate">Sửa</label>
            </div>
            <div class="col">
              <input
                type="checkbox"
                name="permission"
                id="rolesDelete"
                value="roles.delete"
              />
              <label for="rolesDelete">Xóa</label>
            </div>
          </div>
        </td>
      </tr>
      <tr>
        <td>Quản lý sản phẩm</td>
        <td>
          <div class="row">
            <div class="col">
              <input
                type="checkbox"
                name="permission"
                id="productsRead"
                value="products.read"
              />
              <label for="productsRead">Xem</label>
            </div>
            <div class="col">
              <input
                type="checkbox"
                name="permission"
                id="productsAdd"
                value="products.add"
              />
              <label for="productsAdd">Thêm</label>
            </div>
            <div class="col">
              <input
                type="checkbox"
                name="permission"
                id="productsUpdate"
                value="products.update"
              />
              <label for="productsUpdate">Sửa</label>
            </div>
            <div class="col">
              <input
                type="checkbox"
                name="permission"
                id="productsDelete"
                value="products.delete"
              />
              <label for="productsDelete">Xóa</label>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <button type="submit" class="btn btn-primary">Thêm mới</button>
</form>
