<% if(totalPage > 1) {%>
<nav class="d-flex justify-content-end ml-3">
  <ul class="pagination">
    <% if(page > 1) { %>
    <li class="page-item">
      <a class="page-link" href="?<%= getPaginateUrl(req, +page - 1) %>">
        <i class="fas fa-angle-left"></i>
        Trước
      </a>
    </li>
    <% } %> <% if(+totalPage > 3) { %> <% if(+page === 1) {%>
    <li class="page-item <%= +page === 1 ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, 1) %>">1</a>
    </li>
    <li class="page-item <%= +page === 2 ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, 2) %>">2</a>
    </li>
    <% } %> <% if(+page === 2) {%>
    <li class="page-item <%= +page === +page-1 ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, +page-1) %>"
        ><%= +page-1 %></a
      >
    </li>
    <li class="page-item <%= +page === +page ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, +page) %>"
        ><%= +page %></a
      >
    </li>
    <li class="page-item <%= +page === +page+1 ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, +page+1) %>"
        ><%= +page+1 %></a
      >
    </li>
    <% } %> <% if(+page > 2) {%>
    <li class="page-item <%= +page === 1 ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, 1) %>">1</a>
    </li>
    <% if(page < page + 1 && page > 3) {%>
    <li class="page-item disabled">
      <a class="page-link" href="#">...</a>
    </li>
    <% } %> <% if(+page !== +totalPage) {%>
    <li class="page-item <%= +page === +page-1 ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, +page-1) %>"
        ><%= +page-1 %></a
      >
    </li>
    <li class="page-item <%= +page === +page ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, +page) %>"
        ><%= +page %></a
      >
    </li>
    <% } else { %>
    <li class="page-item <%= +page === +page-1 ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, +page-1) %>"
        ><%= +page-1 %></a
      >
    </li>
    <% } %> <% if(page < totalPage - 1) {%>
    <li class="page-item <%= +page === +page+1 ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, +page+1) %>"
        ><%= +page+1 %></a
      >
    </li>
    <% }} %> <% if(page < totalPage - 2) {%>
    <li class="page-item disabled">
      <a class="page-link" href="#">...</a>
    </li>
    <% } %>
    <li class="page-item <%= +page === +totalPage ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, +totalPage) %>"
        ><%= +totalPage %></a
      >
    </li>
    <% }else { %>
    <li class="page-item <%= +page === 1 ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, 1) %>">1</a>
    </li>
    <li class="page-item <%= +page === 2 ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, 2) %>">2</a>
    </li>
    <% if(+totalPage === 3) { %>
    <li class="page-item <%= +page === 3 ? 'active': '' %>">
      <a class="page-link" href="?<%= getPaginateUrl(req, 3) %>">3</a>
    </li>
    <% }} %> <% if(page < totalPage) { %>
    <li class="page-item">
      <a class="page-link" href="?<%= getPaginateUrl(req, +page + 1) %>">
        Sau
        <i class="fas fa-angle-right"></i>
      </a>
    </li>
    <% } %>
  </ul>
</nav>
<% } %>
