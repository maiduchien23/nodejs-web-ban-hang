<div class="card-body">
    <form action="/admin/productVariants/edit/<%= productVariant.id %>" method="POST">
      <div class="form-group">
        <label for="name">Biến thể sản phẩm:</label>
        <select class="form-control" id="product" name="productId" required>
          <% products.forEach(product => { %>
            <option value="<%= product.id %>" <%= product.id === productVariant.productId ? 'selected' : '' %>><%= product.name %></option>
          <% }) %>
         
        </select>
      </div>
      <div class="form-group">
        <label for="color">Màu sắc:</label>
        <select class="form-control" id="color" name="colorId" required>
          <% colors.forEach(color => { %>
            <option value="<%= color.id %>" <%= color.id === productVariant.colorId ? 'selected' : '' %>><%= color.name %></option>
          <% }) %>
     
        </select>
      </div>
      <div class="form-group">
        <label for="size">Size:</label>
        <select class="form-control" id="size" name="sizeId" required>
          <% sizes.forEach(size => { %>
            <option value="<%= size.id %>" <%= size.id === productVariant.sizeId ? 'selected' : '' %>><%= size.name %></option>
          <% }) %>
         
        </select>
      </div>
      <div class="form-group">
        <label for="price">Giá:</label>
        <input
          type="number"
          class="form-control"
          id="price"
          name="price"
          placeholder="Nhập giá sản phẩm"
          value="<%= productVariant.price %>"
          required
        />
       
      </div>
      <div class="form-group">
        <label for="quantityAvailable">Số lượng:</label>
        <input
          type="number"
          class="form-control"
          id="quantityAvailable"
          name="quantityAvailable"
          placeholder="Nhập số lượng"
          value="<%= productVariant.quantityAvailable %>"
          required
        />
    
      </div>
      <input type="hidden" name="_method" value="PATCH" />
      <button type="submit" class="btn btn-primary">Cập nhật sản phẩm</button>
    </form>
  </div>
  