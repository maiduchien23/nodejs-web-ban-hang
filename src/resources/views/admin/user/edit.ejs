<div class="card card-primary">
  <form action="/admin/users/edit/<%= user.id %>" method="post">
    <div class="card-body">
      <div class="form-group">
        <label for="nameUser">Tên người dùng:</label>
        <input
          type="text"
          class="form-control"
          id="nameUser"
          name="name"
          placeholder="Nhập tên người dùng"
          value="<%= user.name %>"
        />
        <span class="text-danger"
          ><%= validate.getError(errors, "name") %></span
        >
      </div>
      <div class="form-group">
        <label for="emailUser">Email:</label>
        <input
          type="email"
          class="form-control"
          id="emailUser"
          name="email"
          placeholder="Nhập email"
          value="<%= user.email %>"
          readonly
        />
        <span class="text-danger"
          ><%= validate.getError(errors, "email") %></span
        >
      </div>
      <div class="form-group">
        <label for="phoneUser">Số điện thoại:</label>
        <input
          type="text"
          class="form-control"
          id="phoneUser"
          name="phone"
          placeholder="Nhập số điện thoại"
          value="<%= user.phone %>"
        />
        <span class="text-danger"
          ><%= validate.getError(errors, "phone") %></span
        >
      </div>
      <div class="form-group">
        <label for="addressUser">Địa chỉ:</label>
        <input
          type="text"
          class="form-control"
          id="addressUser"
          name="address"
          placeholder="Nhập địa chỉ"
          value="<%= user.address %>"
        />
        <span class="text-danger"
          ><%= validate.getError(errors, "address") %></span
        >
      </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
      <input type="hidden" name="_method" value="PATCH" />
      <button type="submit" class="btn btn-primary">Sửa người dùng</button>
    </div>
  </form>
</div>
