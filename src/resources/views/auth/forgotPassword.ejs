<section class="container-fluid bg-body-tertiary d-block">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4" style="min-width: 500px">
      <div
        class="card bg-white mb-5 mt-5 border-0"
        style="box-shadow: 0 12px 15px rgba(0, 0, 0, 0.02)"
      >
        <form action="/auth/logout" method="post">
          <button class="chevron-left">
            <i class="fas fa-chevron-left" style="color: #ffffff"></i>
          </button>
        </form>

        <div class="card-body text-center">
          <div class="text-center mt-4">
            <h3>Đặt lại mật khẩu</h3>
            <p class="lead">Vui lòng nhập email của bạn để lấy lại mật khẩu</p>
          </div>
          <form action="/auth/forgot-password" method="post">
            <div class="form-group">
              <input
                class="form-control form-control-lg"
                type="email"
                name="email"
                placeholder="Enter your email"
              />
            </div>
            <div class="text-center mt-3">
              <button type="submit" class="btn btn-lg btn-primary">Gửi</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
